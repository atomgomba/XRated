<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <set>
            <objectAnimator
                android:duration="@integer/favorite_button_anim_duration"
                android:propertyName="scaleX"
                android:repeatCount="1"
                android:repeatMode="reverse"
                android:valueFrom="1"
                android:valueTo="1.5"
                />
            <objectAnimator
                android:duration="@integer/favorite_button_anim_duration"
                android:propertyName="scaleY"
                android:repeatCount="1"
                android:repeatMode="reverse"
                android:valueFrom="1"
                android:valueTo="1.5"
                />
        </set>
    </item>
    <item android:state_selected="false">
        <set>
            <objectAnimator
                android:duration="@integer/favorite_button_anim_duration"
                android:propertyName="scaleX"
                android:repeatCount="1"
                android:repeatMode="reverse"
                android:valueFrom="1"
                android:valueTo="1.5"
                />
            <objectAnimator
                android:duration="@integer/favorite_button_anim_duration"
                android:propertyName="scaleY"
                android:repeatCount="1"
                android:repeatMode="reverse"
                android:valueFrom="1"
                android:valueTo="1.5"
                />
        </set>
    </item>
</selector>
